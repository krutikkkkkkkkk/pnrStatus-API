{
    "version": 2,
    "builds": [
        {
            "src": "public/**",
            "use": "@now/static"
        },
        {
            "src": "main.js",
            "use": "@now/node"
        }
    ],
    "routes": [
        {
            "src": "/api/(.*)",
            "dest": "main.js"
        },
        {
            "src": "/",
            "dest": "public/index.html"
        }
    ]
}
